<h2 class="mb-4">Proje Teklifleri</h2>

<% if @requests.present? %>
  <% grouped_requests = @requests.group_by(&:project) %>

  <table class="table table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Proje Adı</th>
        <th>Grup Adı</th>
        <th>Grup Lideri</th>
        <th>İşlem</th>
      </tr>
    </thead>
    <tbody>
      <% grouped_requests.each do |project, requests| %>
        <% requests.each_with_index do |request, index| %>
          <tr>
            <% if index == 0 %>
              <td rowspan="<%= requests.size %>" class="align-middle"><%= project.title %></td>
            <% end %>
            <td><%= request.group&.name || "Silinmiş grup" %></td>
            <td><%= request.group&.leader&.email || "Silinmiş lider" %></td>
            <td>
              <div class="d-flex gap-2">
                <%= button_to 'Kabul Et', accept_advisor_project_request_path(request), method: :patch, class: "btn btn-sm btn-success", data: { turbo: false } %>
                <%= button_to 'Reddet', reject_advisor_project_request_path(request), method: :patch, class: "btn btn-sm btn-danger", data: { turbo: false } %>
              </div>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info">Şu anda herhangi bir proje isteği bulunmamaktadır.</div>
<% end %>

<div class="container position-relative">
  <%= link_to "Geri", advisor_dashboard_path, class: "btn btn-sm btn-outline-secondary position-absolute", style: "top: 1rem; right: 1rem; z-index: 10;" %>
</div>
